<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FarmGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FarmGame"
    xmlns:views="clr-namespace:FarmGame.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="True">

    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="{AppThemeBinding Dark={StaticResource DarkPrimary}, Light={StaticResource Primary}}" />
                <Setter Property="Shell.ForegroundColor" Value="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource White}}" />
                <Setter Property="Shell.TitleColor" Value="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource White}}" />
                <Setter Property="Shell.DisabledColor" Value="#B4FFFFFF" />
                <Setter Property="Shell.UnselectedColor" Value="{AppThemeBinding Dark={StaticResource DarkSecondary}, Light={StaticResource Secondary}}" />
                <Setter Property="Shell.TabBarBackgroundColor" Value="{AppThemeBinding Dark={StaticResource DarkPrimary}, Light={StaticResource Primary}}" />
                <Setter Property="Shell.TabBarForegroundColor" Value="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource White}}" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="{AppThemeBinding Dark={StaticResource DarkSecondary}, Light={StaticResource Secondary}}" />
                <Setter Property="Shell.TabBarTitleColor" Value="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource White}}" />
            </Style>
            <Style BasedOn="{StaticResource BaseStyle}" TargetType="TabBar" />
            <Style BasedOn="{StaticResource BaseStyle}" TargetType="ShellContent" />
        </ResourceDictionary>
    </Shell.Resources>

    <!-- This is our main TabBar which will host all the game's main sections -->
    <TabBar>
        <!-- Farm Tab -->
        <ShellContent
            Title="Farm"
            Icon="farm_icon.png"
            ContentTemplate="{DataTemplate views:FarmPage}"
            Route="FarmPage" />

        <!-- Factory Tab -->
        <ShellContent
            Title="Factory"
            Icon="factory_icon.png"
            ContentTemplate="{DataTemplate views:FactoryPage}"
            Route="FactoryPage" />

        <!-- Shop Tab -->
        <ShellContent
            Title="Shop"
            Icon="shop_icon.png"
            ContentTemplate="{DataTemplate views:ShopPage}"
            Route="ShopPage" />

        <!-- Inventory Tab -->
        <ShellContent
            Title="Inventory"
            Icon="inventory_icon.png"
            ContentTemplate="{DataTemplate views:InventoryPage}"
            Route="InventoryPage" />
    </TabBar>

</Shell>